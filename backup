#!/usr/bin/env zsh

#____________________//Personal backup script for//____________________________#
#______      ______                                           _           _____#
#_____      / ____ \________ _   ______ ___  ____  __________(_)____       ____#
#____      / / __ `/ ___/ _ \ | / / __ `__ \/ __ \/ ___/ ___/ / ___/      _____#
#___      / / /_/ (__  )  __/ |/ / / / / / / /_/ / /  / /  / (__  )      ______#
#____     \ \__,_/____/\___/|___/_/ /_/ /_/\____/_/  /_/  /_/____/      _______#
#_____     \____/                                                      ________#
#______________________________________________________________________________#

                #@@@@@@@^^~~~~~~~~~~~~~~~~~~~~^@@@@@@@@@#
                #@@@@@@^     ~^  @  @@ @ @ @ I  ~^@@@@@@#
                #@@@@@            ~ ~~ ~I          @@@@@#
                #@@@@'                  '  _,w@<    @@@@#
                #@@@@     @@@@@@@@w___,w@@@@@@@@  @  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@@@  I  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@*@[ i  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@[][ | ]@@@#
                #@@@@     ~_,,_ ~@@@@@@@~ ____~ @    @@@#
                #@@@@    _~ ,  ,  `@@@~  _  _`@ ]L  J@@@#
                #@@@@  , @@w@ww+   @@@ww``,,@w@ ][  @@@@#
                #@@@@,  @@@@www@@@ @@@@@@@ww@@@@@[  @@@@#
                #@@@@@_|| @@@@@@P' @@P@@@@@@@@@@@[|c@@@@#
                #@@@@@@w| '@@P~  P]@@@-~, ~Y@@^'],@@@@@@#
                #@@@@@@@[   _        _J@@Tk     ]]@@@@@@#
                #@@@@@@@@,@ @@, c,,,,,,,y ,w@@[ ,@@@@@@@#
                #@@@@@@@@@ i @w   ====--_@@@@@  @@@@@@@@#
                #@@@@@@@@@@`,P~ _ ~^^^^Y@@@@@  @@@@@@@@@#
                #@@@@^^=^@@^   ^' ,ww,w@@@@@ _@@@@@@@@@@#
                #@@@_xJ~ ~   ,    @@@@@@@P~_@@@@@@@@@@@@#
                #@@   @,   ,@@@,_____   _,J@@@@@@@@@@@@@#
                #@@L  `' ,@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@#
                #@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@#

bold=$(tput bold)
yellow=$(tput setaf 3)
reset=$(tput sgr0)

# Just a bold yellow arrow
arrow() {
  echo ""
  echo "${yellow}${bold}>>> ${reset}$*"
}

#-------------------------------------------------------------------------------
echo "Running backup script"
sleep 1

#-------------------------------------------------------------------------------
# Time Machine doesn't back up this folder,
# and I may not need to, but I'm doing it anyway
arrow "Backing up ${yellow}~/Library/Saved Application State${reset}"
sleep 1

sudo rsync -av ~/Library/Saved\ Application\ State ~/.backup

#-------------------------------------------------------------------------------
# Time Machine backs up ~/Library/Preferences,
# but I want it backed up here as well
arrow "Backing up ${yellow}~/Library/Preferences${reset}"
sleep 1

sudo rsync -av ~/Library/Preferences ~/.backup

echo "${yellow}${bold}Back up succesful${reset}" && echo
